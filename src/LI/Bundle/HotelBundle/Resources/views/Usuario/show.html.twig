{% extends 'LIHotelBundle::adminBase.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h1>Usuario</h1>
    </div>
    <table class="table table-bordered table-responsive table-striped records_list">
        <thead>
            <tr>
                <th>Nombre y Apellido</th>
                <th>Fecha Nacimiento</th>
                <th>Estado</th>
                <th>Correo</th>
                <th>Usuario</th>
                <th>Ultima Conexi√≥n</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ entity.nombre }} {{ entity.apellido }}</td>
                <td>{% if entity.fechanac %}{{ entity.fechanac|date('d-m-Y') }}{% endif %}</td>
                <td>{% if entity.enabled %}Activo{% else %}Inactivo{% endif %}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.lastLogin|date('d-m-Y H:i') }}</td>
                <td>{% for role in entity.roles %}
                    {{ role }} 
                {% endfor %}</td>
                <td>
                    <a href="{{ path('usuario_edit', { 'id': entity.id }) }}" name="Modificar Detalles"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                </td>
            </tr>
        </tbody>
    </table>

    <p style="text-align: center;">
        <a class="btn btn-success" href="{{ path('usuario') }}" role="button">Regresar</a>
        <a class="btn btn-warning" href="{{ path('usuario_edit', { 'id': entity.id }) }}" role="button">Modificar Detalles</a>
        {{ form(delete_form) }}
    </p>
{% endblock %}