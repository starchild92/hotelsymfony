{% extends 'LIHotelBundle::adminBase.html.twig' %}

{% block body -%}
<div class="col-lg-12 col-sm-12 col-xs-12">
    <div class="page-header">
      <h1>LLamadas<br><small>valores de los tipos de llamadas por minuto</small></h1>
    </div>

    <table class="table table-striped table-bordered records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Costo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('llamada_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.costo }} Bs. por Minuto</td>
                <td class="opciones">
                    <a href="{{ path('llamada_show', { 'id': entity.id }) }}" name="Ver Detalles"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a>
                    <a href="{{ path('llamada_edit', { 'id': entity.id }) }}" name="Modificar Detalles"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p style="text-align: center;">
        <a class="btn btn-default" href="{{ path('llamada_new') }}">Añadir un Nuevo Tipo de Habitación</a>
    </p>

</div>
{% endblock %}
