{% extends 'LIHotelBundle::adminBase.html.twig' %}

{% block body -%}
<div class="col-lg-12 col-sm-12 col-xs-12">
    <div class="page-header">
      <h1>LLamadas<br><small>valores de los tipos de llamadas por minuto</small></h1>
    </div>

    <div class="row">
        <div class="col-lg-3 col-sm-3 col-xs-12">
            <ul class="nav nav-stacked">
                <li role="presentation"><a class="btn btn-primary" href="{{ path('llamada_new') }}">Nuevo Tipo de Llamada</a></li>
            </ul>
        </div>

        <!-- PANEL DEL CONTENIDO -->
        <div class="col-lg-9 col-sm-9 col-xs-12">
            <table class="table table-striped table-bordered records_list">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Tipo</th>
                        <th>Costo</th>
                        <th>Opc</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('llamada_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.tipo }}</td>
                        <td>{{ entity.costo }} Bs. por Minuto</td>
                        <td class="opciones">
                            <a href="{{ path('llamada_show', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="Ver detalles"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a>
                            <a href="{{ path('llamada_edit', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="Modificar detalles"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
