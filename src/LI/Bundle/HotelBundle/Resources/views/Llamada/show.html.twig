{% extends 'LIHotelBundle::adminBase.html.twig' %}

{% block body -%}
<div class="col-lg-12 col-sm-12 col-xs-12">
    <div class="page-header">
        <h1>Llamada</h1>
    </div>

    <div class="row">
        <div class="col-lg-3 col-sm-3 col-xs-12">
            <ul class="nav nav-stacked">
                <li role="presentation"><a class="btn btn-success btn-block" href="{{ path('llamada') }}" role="button">Regresar</a></li>
                <li role="presentation"><a class="btn btn-warning btn-block" href="{{ path('llamada_edit', { 'id': entity.id }) }}" role="button">Editar Llamada</a></li>
                <li role="presentation">{{ form(delete_form) }}</li>
            </ul>
        </div>

        <!-- PANEL DEL CONTENIDO -->
        <div class="col-lg-9 col-sm-9 col-xs-12">
            <table class="table table-bordered table-striped record_properties">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Tipo</th>
                        <td>{{ entity.tipo }}</td>
                    </tr>
                    <tr>
                        <th>Costo</th>
                        <td>{{ entity.costo }} Bs</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
