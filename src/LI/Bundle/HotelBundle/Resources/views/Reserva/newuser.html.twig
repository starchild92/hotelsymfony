{% extends 'LIHotelBundle::userBase.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h1>Realizar una Reservación<br><small>verificar antes si hay habitaciones disponibles</small></h1>
    </div>

    {% for message in app.session.flashbag.get('reserva_error') %}
        <div class="alert alert-danger" role="alert"><b>Oh crap! </b>{{ message }}</div>
    {% endfor %}

    {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.habitacion, {'label':'Nombre de la Habitación reservada'}) }}
        {{ form_row(form.cantidadPersonas, {'label':'Cantidad de Personas'}) }}
        {{ form_row(form.cantidadNinos, {'label':'Cantidad de Niños'}) }}
        {{ form_row(form.diasReserva, {'label':'Duración en días de la reserva'}) }}
        {{ form_row(form.fecha_desde, {'label':'Fecha Inicio Reserva'}) }}
        {{ form_row(form.estadoReserva, {'label':'Estado Reserva'}) }}
        {{ form_row(form.submit, {'label':'Guardar cambios de la reserva'}) }}

    {{ form_end(form) }}

    <div class="row">
        <div class="col-lg-4 col-sm-4 col-xs-12"><a class="btn btn-success btn-block" href="{{ path('user_reserva') }}" role="button">Ver todas las Reservas</a></div>
    </div>
{% endblock %}
