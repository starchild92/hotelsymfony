{% extends 'LIHotelBundle::adminBase.html.twig' %}
	
{% block body -%}
	<div class="page-header"><h1>Concretar Reserva</h1></div>

	<div class="row">
		<div class="col-lg-6" style="float: none; margin: 0 auto;">
			{% for message in app.session.flashbag.get('reserva_malos') %}
				<div class = "alert alert-danger alert-dismissable">
			        <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
			        <b>Holy Whack-A-Mole! </b>{{ message }}
		    	</div>
			{% endfor %}
			{% for message in app.session.flashbag.get('reserva_buenos') %}
				<div class = "alert alert-success alert-dismissable">
        			<button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
        			<b>En horabuena! </b>{{ message }}
        		</div>
			{% endfor %}
			{% for message in app.session.flashbag.get('reserva_info') %}
				<div class = "alert alert-info alert-dismissable">
	    			<button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
	    			<b>Disculpe! </b>{{ message }}
	    		</div>
			{% endfor %}

			{{ form_start(form) }}
			<div class="input-group">
  				<span class="input-group-addon" id="basic-addon1">Código</span>
  				{{ form_row(form.codigo_reserva) }}
  			</div>
  			{% if id_reserva is defined %}
  				<div class="row"><div class="col-lg-12">
  					<br>
					<a type="button" class="btn btn-warning btn-block" href="{{ path('reserva_edit', { 'id': id_reserva }) }}">Modifique la Reserva</a>
				</div></div>
			{% endif %}
			<div class="row">
				<br>
				<div class="col-lg-6">{{ form_row(form.reset)}}</div>
				<div class="col-lg-6">{{ form_row(form.submit)}}</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}