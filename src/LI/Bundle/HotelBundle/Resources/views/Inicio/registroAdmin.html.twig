{% extends 'LIHotelBundle::adminBase.html.twig' %}

{% block title %}Hotel Symfony - Registro{% endblock%}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="page-header">
                    <h1>Registre un Nuevo Hu√©sped</h1>
                </div>
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <div class="alert alert-success alert-dismissible" role="alert">
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <strong> {{ flashMessage }}</strong>
                  </div>
                {% endfor %}
                <div class="container row">
                    <form action="{{ path('LIHotelBundle_registro') }}" method="post" {{ form_enctype(form) }} class="usuario">
                        {% form_theme form 'bootstrap_3_layout.html.twig'  %}
                        {{ form_errors(form) }}
                        {{ form_row(form._token) }}
                        <div class="row">
                            <div class="col-lg-4 col-sm-4 col-xs-12">{{ form_row(form.nombre, {'attr':{'autocomplete':'off'}}) }}</div>
                            <div class="col-lg-4 col-sm-4 col-xs-12">{{ form_row(form.apellido, {'attr':{'autocomplete':'off'}}) }}</div>
                            <div class="col-lg-4 col-sm-4 col-xs-12">{{ form_row(form.fecha_nac, {'attr':{'autocomplete':'off'}}) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-sm-4 col-xs-12">{{ form_row(form.username, {'attr':{'autocomplete':'off'}}) }}</div>
                            <div class="col-lg-4 col-sm-4 col-xs-12">{{ form_row(form.email, {'attr':{'autocomplete':'off'}}) }}</div>
                            <div class="col-lg-4 col-sm-4 col-xs-12">{{ form_row(form.enabled, {'attr':{'autocomplete':'off'}}) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-sm-4 col-xs-12">{{ form_row(form.roles, {'attr':{'autocomplete':'off'}}) }}</div>
                            <div class="col-lg-4 col-sm-4 col-xs-12">{{ form_row(form.plainPassword, {'attr':{'autocomplete':'off'}}) }}</div>
                        </div>
                        {{ form_rest(form) }}

                        <button type="button submit" class="btn btn-success btn-block pull-right">
                            <span class="glyphicon glyphicon-hand-right pull-left" aria-hidden="true"></span> Enviar Registro
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style type="text/css">
        .usuario > input{
            margin-bottom: 10px;
        }
    </style>
{% endblock %}