{% extends 'LIHotelBundle::adminBase.html.twig' %}

{% block body -%}
<div class="col-lg-12 col-sm-12 col-xs-12">
    <div class="page-header">
        <h1>Compensaciones de Cobros</h1>
    </div>
    <div class="row">
        <div class="col-lg-3 col-sm-3 col-xs-12">
            <ul class="nav nav-stacked">
                <li role="presentation"><a class="btn btn-primary" href="{{ path('compensacion_new') }}">Añadir una Compensación Nueva</a></li>
                <li role="presentation"></li>
            </ul>
        </div>

        <!-- PANEL DEL CONTENIDO -->
        <div class="col-lg-9 col-sm-9 col-xs-12">
            <table class="table table-striped table-bordered records_list">
                <thead>
                    <tr>
                        <th colspan="2"></th>
                        <th colspan="2">Intervalo Días</th>
                        <th colspan="2">Intervalo Horas</th>
                        <th></th>
                    </tr>
                    <tr>
                        <th>ID</th>
                        <th>Cobro Porcentual</th>
                        <th>(.. de</th>
                        <th>.. hasta]</th>
                        <th>(.. de</th>
                        <th>.. hasta]</th>
                        <th>Opc</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('compensacion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.porcentaje }}%</td>
                        <td>{{ entity.deDias }} días</td>
                        <td>{{ entity.aDias }} días</td>
                        <td>{{ entity.deHoras }} hrs</td>
                        <td>{{ entity.aHoras }} hrs</td>
                        <td class="opciones">
                            <a href="{{ path('compensacion_show', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="Ver detalles"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a>
                            <a href="{{ path('compensacion_edit', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="Modificar detalles"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
