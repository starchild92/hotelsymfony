{% extends 'LIHotelBundle::adminBase.html.twig' %}

{% block body -%}
<div class="col-lg-12 col-sm-12 col-xs-12">
    {% if entities %}
    <div class="page-header">
        <h1>Habitaciones del Hotel<br><small>como están conformadas las habitaciones del hotel</small></h1>
    </div>
    <table class="table table-striped table-bordered records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Estado</th>
                <th>Numero</th>
                <th>Nombre</th>
                <th>Caracteristicas de la Habitación</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('habitacion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.nombre }}</td>
                <td class="table-td-inception">
                    De categoría {{ entity.tipo.categoriaHabitacion }} y tipo {{ entity.tipo.tipoHabitacion }}, {{ entity.tipo.espacioInterno }} con los siguientes servicios: "{% for servicio in entity.tipo.servicios %}{{ servicio.nombre }} {% endfor %}" y {{ entity.tipo.bebidasMinibar|length }} tipo de bebidas en el minibar.
                </td>
                <td class="opciones">
                    <a href="{{ path('habitacion_show', { 'id': entity.id }) }}" name="Ver Detalles"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a>
                    <a href="{{ path('habitacion_edit', { 'id': entity.id }) }}" name="Modificar Detalles"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <p style="text-align: center;">
        <a class="btn btn-default" href="{{ path('habitacion_new') }}" role="button">Agregar una Nueva Habitación</a>
    </p>
    {% else %}
        <div class="jumbotron">
          <h2>Lo sentimos, <small>no se han añadido habitaciones</small></h2>
          <p>No hay nada para mostrar, disculpe. Puede agregar algo haciendo click en el siguiente botón.</p>
          <p><a class="btn btn-success btn-lg" href="{{ path('habitacion_new') }}" role="button">Agregar una Habitación</a></p>
        </div>
    {% endif %}
</div>
{% endblock %}
