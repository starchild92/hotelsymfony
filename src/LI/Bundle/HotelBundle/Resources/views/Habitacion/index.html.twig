{% extends 'LIHotelBundle::adminBase.html.twig' %}

{% block body -%}
<div class="col-lg-12 col-sm-12 col-xs-12">
    <div class="page-header">
        <h1>Habitaciones del Hotel<br><small>como están conformadas las habitaciones del hotel</small></h1>
    </div>

    <table class="table table-striped table-bordered records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Estado</th>
                <th>Numero</th>
                <th>Nombre</th>
                <th>Caracteristicas de la Habitación</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('habitacion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.nombre }}</td>
                <td class="table-td-inception">
                    <table class="table table-condensed table-inception">
                        <thead>
                            <th>Categoria</th>
                            <th>Tipo</th>
                            <th>Descripción</th>
                        </thead>
                        <tr>
                            <td>{{ entity.tipo.categoriaHabitacion }}</td>
                            <td>{{ entity.tipo.tipoHabitacion }}</td>
                            <td>{{ entity.tipo.espacioInterno }}</td>
                        </tr>
                        <thead>
                            <th>Servicios</th>
                            <th colspan="2">Cant. Bebidas</th>
                        </thead>
                        <tr>
                            <td>{{ entity.tipo.servicios }}</td>
                            <td colspan="2">{{ entity.tipo.bebidasMinibar|length }}</td>
                        </tr>
                    </table>
                </td>
                <td class="opciones">
                    <a href="{{ path('habitacion_show', { 'id': entity.id }) }}" name="Ver Detalles"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a>
                    <a href="{{ path('habitacion_edit', { 'id': entity.id }) }}" name="Modificar Detalles"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('habitacion_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
</div>
{% endblock %}
